using System;
using System.Runtime.CompilerServices;

namespace lessons
{
    class Program
    {
        static void Main(string[] args)
        {

            int Planke = 25;
            int player = 1;
            int take;

            Console.WriteLine("Sie haben 25 Bretter, das Spiel hat begonnen");
            Console.WriteLine("Wählen Sie zwischen 1 und 3");

            while (Planke > 0) //  если делать через true то код не идет почему то дальше (нужно вкладывать дядю)
            {

                while (true)
                {
                    if (int.TryParse(Console.ReadLine(), out take) && take >= 1 && take <= 3)
                    {
                        break;
                    }
                    Console.WriteLine("ungültige Eingabe");
                }
                
                Planke -= take;

                if (Planke == 0)
                {
                    Console.WriteLine($"Du {player} hast verloren, LOX.");

                }
            }


            if (player == 1)
            {
                player = 2;
            }
            else
            {
                player = 1;
            }



        }
        
    }
}
